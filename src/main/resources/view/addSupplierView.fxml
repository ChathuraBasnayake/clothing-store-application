<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="com.icet.clothify.controller.AddSupplierController">
    <children>
        <Pane prefHeight="450.0" prefWidth="550.0"
              style="-fx-background-color: #ffffff; -fx-background-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0.5, 3, 3);">
            <children>
                <Label layoutX="40.0" layoutY="30.0" text="Add New Supplier" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                </Label>
                <VBox layoutX="40.0" layoutY="90.0" prefWidth="470.0" spacing="20.0">
                    <children>
                        <HBox spacing="30.0">
                            <children>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Supplier Name" textFill="#4a4a4a"/>
                                        <TextField fx:id="supplierNameField" prefHeight="35.0"
                                                   promptText="e.g., Prime Textiles" styleClass="form-field"/>
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Company" textFill="#4a4a4a"/>
                                        <TextField fx:id="supplierCompanyField" prefHeight="35.0"
                                                   promptText="e.g., Prime Textiles (Pvt) Ltd"
                                                   styleClass="form-field"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <HBox spacing="30.0">
                            <children>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Email Address" textFill="#4a4a4a"/>
                                        <TextField fx:id="supplierEmailField" prefHeight="35.0"
                                                   promptText="e.g., contact@primetextiles.com"
                                                   styleClass="form-field"/>
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Phone Number" textFill="#4a4a4a"/>
                                        <TextField fx:id="supplierPhoneField" prefHeight="35.0"
                                                   promptText="e.g., 0771234567" styleClass="form-field"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <Button layoutX="40.0" layoutY="365.0" onAction="#handleSaveSupplier" prefHeight="40.0"
                        prefWidth="470.0" styleClass="button-primary" text="Save Supplier" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Button>
            </children>
        </Pane>
    </children>
</VBox>
