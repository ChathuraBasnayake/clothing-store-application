<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.icet.clothify.controller.HomeController"
      xmlns="http://javafx.com/javafx/23.0.1" spacing="20.0" style="-fx-background-color: transparent;">
    <children>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="20.0">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                    <children>
                        <Label text="Clothify Overview" textFill="#333333">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>

                        <GridPane hgap="20.0" vgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <VBox styleClass="stat-card">
                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <Pane style="-fx-background-color: #e0f7fa; -fx-background-radius: 50;">
                                            <padding>
                                                <Insets top="12" right="12" bottom="12" left="12"/>
                                            </padding>
                                            <children>
                                                <FontAwesomeIconView glyphName="DOLLAR" size="1.8em" fill="#0097a7"/>
                                            </children>
                                        </Pane>
                                        <VBox>
                                            <Label text="Total Sales" textFill="#546e7a">
                                                <font>
                                                    <Font name="System Bold" size="14.0"/>
                                                </font>
                                            </Label>
                                            <Label fx:id="totalSalesLabel" text="LKR 0.00" textFill="#262323">
                                                <font>
                                                    <Font name="System Bold" size="28.0"/>
                                                </font>
                                            </Label>
                                        </VBox>
                                    </HBox>
                                </VBox>

                                <VBox styleClass="stat-card" GridPane.columnIndex="1">
                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <Pane style="-fx-background-color: #fff3e0; -fx-background-radius: 50;">
                                            <padding>
                                                <Insets top="12" right="12" bottom="12" left="12"/>
                                            </padding>
                                            <children>
                                                <FontAwesomeIconView glyphName="USERS" size="1.8em" fill="#ff9800"/>
                                            </children>
                                        </Pane>
                                        <VBox>
                                            <Label text="Total Users" textFill="#546e7a">
                                                <font>
                                                    <Font name="System Bold" size="14.0"/>
                                                </font>
                                            </Label>
                                            <Label fx:id="noUsersLabel" text="0" textFill="#262323">
                                                <font>
                                                    <Font name="System Bold" size="28.0"/>
                                                </font>
                                            </Label>
                                        </VBox>
                                    </HBox>
                                </VBox>

                                <VBox styleClass="stat-card" GridPane.columnIndex="2">
                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <Pane style="-fx-background-color: #e8eaf6; -fx-background-radius: 50;">
                                            <padding>
                                                <Insets top="12" right="12" bottom="12" left="12"/>
                                            </padding>
                                            <children>
                                                <FontAwesomeIconView glyphName="CUBE" size="1.8em" fill="#3f51b5"/>
                                            </children>
                                        </Pane>
                                        <VBox>
                                            <Label text="Total Items" textFill="#546e7a">
                                                <font>
                                                    <Font name="System Bold" size="14.0"/>
                                                </font>
                                            </Label>
                                            <Label fx:id="noItemsLabel" text="0" textFill="#262323">
                                                <font>
                                                    <Font name="System Bold" size="28.0"/>
                                                </font>
                                            </Label>
                                        </VBox>
                                    </HBox>
                                </VBox>
                            </children>
                        </GridPane>

                        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                            <children>
                                <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
                                    <Label text="Monthly Sales (Last 6 Months)">
                                        <font>
                                            <Font name="System Bold" size="16.0"/>
                                        </font>
                                    </Label>
                                    <BarChart fx:id="salesChart" animated="true" barGap="5.0" categoryGap="20.0"
                                              legendVisible="false">
                                        <xAxis>
                                            <CategoryAxis fx:id="xAxis" side="BOTTOM"/>
                                        </xAxis>
                                        <yAxis>
                                            <NumberAxis side="LEFT"/>
                                        </yAxis>
                                    </BarChart>
                                </VBox>

                                <VBox styleClass="activity-container" prefWidth="320.0" minWidth="-Infinity">
                                    <Label text="Recent Activity">
                                        <font>
                                            <Font name="System Bold" size="16.0"/>
                                        </font>
                                    </Label>
                                    <ListView fx:id="activityListView"/>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
