<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.icet.clothify.controller.AddUserController">
    <children>
        <Pane prefHeight="450.0" prefWidth="1050.0"
              style="-fx-background-color: #ffffff; -fx-background-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0.5, 3, 3);">
            <children>
                <Label layoutX="40.0" layoutY="30.0" text="Add New User" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                </Label>
                <Label layoutX="40.0" layoutY="90.0" text="User ID" textFill="#4a4a4a">
                    <font>
                        <Font name="System Medium" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="userIdField" editable="false" layoutX="40.0" layoutY="115.0" prefHeight="35.0"
                           prefWidth="220.0" promptText="Auto-generated user ID"
                           style="-fx-background-radius: 8px; -fx-border-color: #e0e0e0; -fx-border-radius: 8px;"/>
                <Label layoutX="40.0" layoutY="170.0" text="Full Name" textFill="#4a4a4a">
                    <font>
                        <Font name="System Medium" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="userNameField" layoutX="40.0" layoutY="195.0" prefHeight="35.0" prefWidth="220.0"
                           promptText="Enter user's full name"
                           style="-fx-background-radius: 8px; -fx-border-color: #e0e0e0; -fx-border-radius: 8px;"/>
                <Label layoutX="40.0" layoutY="250.0" text="Password" textFill="#4a4a4a">
                    <font>
                        <Font name="System Medium" size="14.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" layoutX="40.0" layoutY="275.0" prefHeight="35.0" prefWidth="220.0"
                               promptText="Enter password"
                               style="-fx-background-radius: 8px; -fx-border-color: #e0e0e0; -fx-border-radius: 8px;"/>
                <Label layoutX="290.0" layoutY="90.0" text="Company" textFill="#4a4a4a">
                    <font>
                        <Font name="System Medium" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="companyField" layoutX="290.0" layoutY="115.0" prefHeight="35.0" prefWidth="220.0"
                           promptText="Enter company name"
                           style="-fx-background-radius: 8px; -fx-border-color: #e0e0e0; -fx-border-radius: 8px;"/>
                <Label layoutX="290.0" layoutY="170.0" text="Email Address" textFill="#4a4a4a">
                    <font>
                        <Font name="System Medium" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="emailField" layoutX="290.0" layoutY="195.0" prefHeight="35.0" prefWidth="220.0"
                           promptText="Enter user's email"
                           style="-fx-background-radius: 8px; -fx-border-color: #e0e0e0; -fx-border-radius: 8px;"/>
                <Label layoutX="290.0" layoutY="250.0" text="Confirm Password" textFill="#4a4a4a">
                    <font>
                        <Font name="System Medium" size="14.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="confirmPasswordField" layoutX="290.0" layoutY="275.0" prefHeight="35.0"
                               prefWidth="220.0" promptText="Confirm password"
                               style="-fx-background-radius: 8px; -fx-border-color: #e0e0e0; -fx-border-radius: 8px;"/>
                <Button layoutX="40.0" layoutY="365.0" onAction="#handleCreateUser" prefHeight="40.0"
                        prefWidth="470.0" styleClass="button-primary" text="Create User" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Button>
                <JFXCheckBox fx:id="isEmployeeCheckBox" layoutX="40.0" layoutY="324.0" text="Employee"/>
                <ImageView fitHeight="408.0" fitWidth="645.0" layoutX="560.0" layoutY="21.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../img/dashboard/img-4.png"/>
                    </image>
                </ImageView>
            </children>
        </Pane>
    </children>
</VBox>
